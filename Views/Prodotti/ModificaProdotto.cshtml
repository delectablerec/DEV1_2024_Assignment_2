@model ModificaProdottoViewModel
@{
    ViewData["Title"] = "Modifica Prodotto";
}

<div class="container my-4 py-4 bg-dark text-light rounded shadow-sm">
    <div class="row">
        <div class="col-lg-9 mx-auto rounded border p-4">
            <h1 class="text-center mb-5">@ViewData["Title"]</h1>

            <form asp-action="ModificaProdotto" method="post" enctype="multipart/form-data" class="g-3">

                <div class="form-group row mb-3">
                    <label asp-for="Orologio.Nome" class="col-sm-4 control-label">Nome</label>
                    <div class="col-sm-8">
                        <input class="form-control bg-dark text-light border-secondary" name="Orologio.Nome"
                            value="@Model.Orologio.Nome" asp-for="Orologio.Nome">
                    </div>
                </div>

                <div class="form-group row mb-3">
                    <label asp-for="Orologio.Prezzo" class="col-sm-4 control-label">Prezzo</label>
                    <div class="col-sm-8">
                        <input class="form-control bg-dark text-light border-secondary" name="Orologio.Prezzo"
                            value="@Model.Orologio.Prezzo" asp-for="Orologio.Prezzo">
                    </div>
                </div>

                <div class="form-group row mb-3">
                    <label asp-for="Orologio.Giacenza" class="col-sm-4 control-label">Giacenza</label>
                    <div class="col-sm-8">
                        <input class="form-control bg-dark text-light border-secondary" name="Orologio.Giacenza"
                            value="@Model.Orologio.Giacenza" asp-for="Orologio.Giacenza">
                    </div>
                </div>

                <div class="form-group row mb-3">
                    <label asp-for="Orologio.Colore" class="col-sm-4 control-label">Colore</label>
                    <div class="col-sm-8">
                        <input class="form-control bg-dark text-light border-secondary" name="Orologio.Colore"
                            value="@Model.Orologio.Colore" asp-for="Orologio.Colore">
                    </div>
                </div>

                <div class="form-group row mb-3">
                    <label asp-for="Orologio.UrlImmagine" class="col-sm-4 control-label">Immagine</label>
                    <div class="col-sm-8">
                        <input class="form-control bg-dark text-light border-secondary" name="Orologio.UrlImmagine"
                            value="@Model.Orologio.UrlImmagine" asp-for="Orologio.UrlImmagine">
                    </div>
                </div>

                <div class="form-group row mb-3">
                    <label class="col-sm-4 control-label">Carica nuova immagine</label>
                    <div class="col-sm-8">
                        <input type="file" class="form-control bg-dark text-light border-secondary"
                            asp-for="ImmagineCaricata" accept="image/*">
                    </div>
                </div>

                <div class="form-group row mb-3 center">
                    <label asp-for="Orologio.CategoriaId" class="col-sm-4 control-label">Categoria</label>
                    <div class="col-sm-8">
                        <select class="form-select bg-dark text-light border-secondary" asp-for="Orologio.CategoriaId">
                            <option value="">Seleziona categoria</option>
                            @foreach (var categoria in Model.Categorie)
                            {
                                <option value="@categoria.Id">@categoria.Nome</option>
                            }
                        </select>
                    </div>
                </div>

                <div class="form-group row mb-3 center">
                    <label class="col-sm-4 control-label">Marca</label>
                    <div class="col-sm-8">
                        <select asp-for="Orologio.MarcaId" class="form-select bg-dark text-light border-secondary"
                            asp-for="Orologio.MarcaId">
                            <option value="">Seleziona marca</option>
                            @foreach (var marca in Model.Marche)
                            {
                                <option value="@marca.Id">@marca.Nome</option>
                            }
                        </select>
                    </div>
                </div>

                <div class="form-group row mb-3">
                    <label asp-for="Orologio.Modello" class="col-sm-4 control-label">Modello</label>
                    <div class="col-sm-8">
                        <input class="form-control bg-dark text-light border-secondary" name="Orologio.Modello"
                            value="@Model.Orologio.Modello" asp-for="Orologio.Modello">
                    </div>
                </div>

                <div class="form-group row mb-3">
                    <label asp-for="Orologio.Referenza" class="col-sm-4 control-label">Referenza</label>
                    <div class="col-sm-8">
                        <input class="form-control bg-dark text-light border-secondary" name="Orologio.Referenza"
                            value="@Model.Orologio.Referenza" asp-for="Orologio.Referenza">
                    </div>
                </div>

                <div class="form-group row mb-3 center">
                    <label asp-for="Orologio.MaterialeId" class="col-sm-4 control-label">Materiale</label>
                    <div class="col-sm-8">
                        <select class="form-select bg-dark text-light border-secondary" asp-for="Orologio.MaterialeId">
                            <option value="">Seleziona materiale</option>
                            @foreach (var materiale in Model.Materiali)
                            {
                                <option value="@materiale.Id">@materiale.Nome</option>
                            }
                        </select>
                    </div>
                </div>

                <div class="form-group row mb-3 center">
                    <label asp-for="Orologio.TipologiaId" class="col-sm-4 control-label">Tipologia</label>
                    <div class="col-sm-8">
                        <select class="form-select bg-dark text-light border-secondary" asp-for="Orologio.TipologiaId">
                            <option value="">Seleziona tipologia</option>
                            @foreach (var tipologia in Model.Tipologie)
                            {
                                <option value="@tipologia.Id">@tipologia.Nome</option>
                            }
                        </select>
                    </div>
                </div>

                <div class="form-group row mb-3">
                    <label asp-for="Orologio.Diametro" class="col-sm-4 control-label">Diametro</label>
                    <div class="col-sm-8">
                        <input class="form-control bg-dark text-light border-secondary" name="Orologio.Colore"
                            value="@Model.Orologio.Diametro" asp-for="Orologio.Diametro">
                    </div>
                </div>

                <div class="form-group row mb-3 center">
                    <label asp-for="Orologio.GenereId" class="col-sm-4 control-label">Genere</label>
                    <div class="col-sm-8">
                        <select class="form-select bg-dark text-light border-secondary" asp-for="Orologio.GenereId">
                            <option value="">Seleziona genere</option>
                            @foreach (var genere in Model.Generi)
                            {
                                <option value="@genere.Id">@genere.Nome</option>
                            }
                        </select>
                    </div>
                </div>

                <div class="row mt-4">
                    <div class="offset-sm-4 col-sm-8">
                        <input type="hidden" name="Orologio.Id" value="@Model.Orologio.Id" />
                        <button type="submit" class="btn btn-custom w-100 rounded-pill">Aggiorna</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <a class="link-body-emphasis link-underline-opacity-10 btn btn-custom w-100 rounded-pill" asp-controller="Prodotti"
        asp-action="Index">Torna a Prodotti</a>
</div>

<!-- Custom CSS -->
<style>
    /* Dark Theme Background */
    body {
        background-color: #121212;
        color: #e0e0e0;
    }

    .container.bg-dark {
        background-color: #1e1e1e;
    }

    /* Input Field Styles */
    .form-control,
    .form-select {
        background-color: #333;
        color: #f5f5dc;
        border: 1px solid #555;
    }

    .form-control:focus,
    .form-select:focus {
        background-color: #444;
        color: #f5f5dc;
        border-color: #888;
    }

    /* Custom Button Style with Pale Cream Color */
    .btn-custom {
        background-color: #f5f5dc;
        color: #333;
        border: none;
        transition: background-color 0.3s ease, color 0.3s ease, border 0.3s ease;
    }

    /* Hover Effect */
    .btn-custom:hover {
        background-color: transparent;
        color: #ffffff;
        border: 2px solid #b0b0b0;
    }
</style>