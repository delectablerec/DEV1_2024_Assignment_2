@model CarrelloViewModel
@{
    ViewData["Title"] = "Carrello";
}

<h1>@ViewData["Title"]</h1>


<!-- Elementi del Carrello -->
<div class="cart-items">
    @if (Model.Carrello != null)
    {
        @foreach (var orologio in Model.Carrello)
        {
            <!-- Prodotto Singolo -->
            <div class="cart-item row mb-3">
                <div class="col-12 col-sm-3">
                    <img src="@orologio.UrlImmagine" alt="Immagine Prodotto" class="img-fluid rounded" />
                </div>
                <div class="col-12 col-sm-7 cart-item-details">
                    <h6 class="mb-1">@orologio.Modello</h6>
                    @* <small class="text-muted">@orologio.Descrizione</small> *@
                    <div class="d-flex align-items-center mt-2 cart-item-actions">
                        <!-- Pulsanti per modificare la quantità -->
                        <button class="btn btn-sm btn-outline-secondary me-2">-</button>
                        <span>@Model.Quantita</span>
                        <button class="btn btn-sm btn-outline-secondary ms-2">+</button>
                    </div>
                </div>
                <div class="col-12 col-sm-2 text-end">
                    <span class="fw-bold">€@orologio.Prezzo</span>
                </div>
            </div>
        }
    }
    else
    {
        <p>Carrello vuoto.</p>
    }
</div>

<div class="modal-footer d-flex justify-content-between w-100">
    <!-- Totale e Prezzo -->
    <div class="d-flex justify-content-between w-100">
        <h6 class="mb-0">Totale</h6>
        <span class="fw-bold total-price">€@Model.Totale</span>
    </div>
    <!-- Bottoni a destra -->
    <div class="ms-auto">
        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
            Continua a Comprare
        </button>
        <button type="button" class="btn btn-dark">Vai alla Cassa</button>
    </div>
</div>