@{
    ViewData["Title"] = "Aggiungi nuova categoria";
}

<!-- Page Container -->
<div class="container my-4 py-4 bg-dark text-light rounded shadow-sm">
    <h2 class="text-center">@ViewData["Title"]</h2>

    <!-- Form -->
    <form method="post" class="mt-4">
        <div class="form-group mb-3">
            <label for="Nome" class="form-label">Nome Categoria</label>
            <input type="text" id="Nome" name="nome" class="form-control bg-dark text-light border-secondary" required />
        </div>

        <button type="submit" class="btn btn-custom w-100 rounded-pill">Aggiungi</button>
    </form>
</div>

<!-- Custom CSS -->
<style>
    /* Container background set to mid grey */
    .container.bg-dark {
        background-color: #808080; /* Mid grey background */
    }
    
    /* Input field styles */
    .form-control {
        background-color: #f5f5f5; /* Light grey background for input fields */
        color: #333333; /* Dark text for inputs */
        border: 1px solid #ccc; /* Light grey border */
    }
    
    .form-control:focus {
        background-color: #e0e0e0; /* Slightly darker grey when focused */
        color: #333333;
        border-color: #888; /* Darker border on focus */
    }

    /* Button style with black background and white text */
    .btn-custom {
        background-color: #000000; /* Black background */
        color: #ffffff; /* White text */
        border: none;
        transition: background-color 0.3s ease, color 0.3s ease, border 0.3s ease;
    }
    
    /* Button hover effect */
    .btn-custom:hover {
        background-color: #333333; /* Dark grey background when hovered */
        color: #ffffff; /* Keep text white on hover */
        border: 2px solid #555; /* Slight grey border on hover */
    }
</style>